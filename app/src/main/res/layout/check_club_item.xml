<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gcs="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">
    <TextView
        android:id="@+id/check_club_name"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#606060"
        android:textSize="60px"
        android:layout_marginTop="35px"
        android:layout_marginLeft="93px"></TextView>

    <ImageView
        android:id="@+id/check_club_right_array"
        android:layout_width="130px"
        android:layout_height="130px"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"></ImageView>

    <clubmanage.ui.CircleImageView
        android:id="@+id/check_club_act_img"
        android:layout_width="175px"
        android:layout_height="175px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10px"
        android:layout_marginRight="16dp"
        gcs:border_width="5px"
        gcs:border_color="#BBBBBB"
        android:layout_toLeftOf="@id/check_club_right_array"></clubmanage.ui.CircleImageView>

    <ImageView
        android:id="@+id/check_club_clock"
        android:layout_width="45px"
        android:layout_height="45px"
        android:layout_marginLeft="93px"
        android:layout_marginTop="3dp"
        android:layout_below="@id/check_club_name"></ImageView>


    <ImageView
        android:id="@+id/check_club_posi"
        android:layout_width="45px"
        android:layout_height="45px"
        android:layout_below="@id/check_club_clock"
        android:layout_marginLeft="93px"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="35px"></ImageView>

    <TextView
        android:id="@+id/check_club_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#828282"
        android:layout_below="@id/check_club_name"
        android:layout_toRightOf="@+id/check_club_clock"
        android:textSize="40px"
        android:layout_marginLeft="11px"></TextView>


    <TextView
        android:id="@+id/check_club_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#828282"
        android:layout_below="@id/check_club_time"
        android:layout_toRightOf="@+id/check_club_posi"
        android:textSize="40px"
        android:layout_marginTop="2px"
        android:layout_marginLeft="11px"></TextView>
</RelativeLayout>