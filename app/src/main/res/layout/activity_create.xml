                android:layout_marginRight="7.3dp"></TextView>
            <ImageView
                android:id="@+id/activity_img6"
                android:src="@drawable/arrow_right_grey"
                android:layout_width="43.6dp"
                android:layout_height="43.6dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                ></ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/create_start_time"
            android:orientation="horizontal"
            android:layout_width="match_parent"
