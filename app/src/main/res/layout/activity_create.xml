            <ImageView
                android:id="@+id/activity_img2"
                android:src="@drawable/arrow_right_grey"
                android:layout_width="43.6dp"
                android:layout_height="43.6dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                ></ImageView>
        </RelativeLayout>
        <RelativeLayout
