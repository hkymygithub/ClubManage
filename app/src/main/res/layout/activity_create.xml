                android:layout_toLeftOf="@+id/activity_img4"
                android:textSize="14.5dp"
                android:maxLines="5"
                android:layout_marginRight="7.3dp"></TextView>
            <ImageView
                android:id="@+id/activity_img4"
                android:src="@drawable/arrow_right_grey"
                android:layout_width="43.6dp"
                android:layout_height="43.6dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                ></ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/create_public"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginBottom="4dp">
