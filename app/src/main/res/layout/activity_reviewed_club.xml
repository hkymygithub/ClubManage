<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CreateActivity"
    android:background="#EEEEEE">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/audit_activity_toolbar_club"
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:background="@color/titlecolorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审核社团"
                android:textColor="#FFFFFF"
                android:textSize="65px"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <RelativeLayout
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:id="@+id/create_club_name">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="社团名"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:layout_marginLeft="18dp"></TextView>
                <TextView
                    android:id="@+id/t_create_club_name"
                    android:layout_width="218dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#999999"
                    android:layout_toLeftOf="@+id/club_img1"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:maxLines="5"
                    android:layout_marginRight="7.3dp"></TextView>
                <ImageView
                    android:id="@+id/club_img1"
                    android:layout_width="43.6dp"
                    android:layout_height="43.6dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    ></ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginBottom="4dp"
                android:id="@+id/create_club_cat">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="社团分类"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:layout_marginLeft="18dp"></TextView>
                <TextView
                    android:id="@+id/t_create_club_cat"
                    android:layout_width="218dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#999999"
                    android:layout_toLeftOf="@+id/club_img2"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:maxLines="5"
                    android:layout_marginRight="7.3dp"></TextView>
                <ImageView
                    android:id="@+id/club_img2"
                    android:layout_width="43.6dp"
                    android:layout_height="43.6dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    ></ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginBottom="4dp"
                android:id="@+id/create_club_place">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="社团场地"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:layout_marginLeft="18dp"></TextView>
                <TextView
                    android:id="@+id/t_create_club_place"
                    android:layout_width="218dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#999999"
                    android:layout_toLeftOf="@+id/club_img3"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:maxLines="5"
                    android:layout_marginRight="7.3dp"></TextView>
                <ImageView
                    android:id="@+id/club_img3"
                    android:layout_width="43.6dp"
                    android:layout_height="43.6dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    ></ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginBottom="4dp"
                android:id="@+id/create_club_introduce">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="社团简介"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:layout_marginLeft="18dp"></TextView>
                <TextView
                    android:id="@+id/t_create_club_introduce"
                    android:layout_width="218dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#999999"
                    android:layout_toLeftOf="@+id/club_img4"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:maxLines="5"
                    android:layout_marginRight="7.3dp"></TextView>
                <ImageView
                    android:id="@+id/club_img4"
                    android:layout_width="43.6dp"
                    android:layout_height="43.6dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    ></ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginBottom="4dp"
                android:id="@+id/create_club_reason">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="创建理由"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:layout_marginLeft="18dp"></TextView>
                <TextView
                    android:id="@+id/t_create_club_reason"
                    android:layout_width="218dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#999999"
                    android:layout_toLeftOf="@+id/club_img5"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:maxLines="5"
                    android:layout_marginRight="7.3dp"></TextView>
                <ImageView
                    android:id="@+id/club_img5"
                    android:layout_width="43.6dp"
                    android:layout_height="43.6dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    ></ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:background="#D76569"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:textColor="@color/white"
                    android:text="    修改意见"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:paddingTop="7px" />
            </RelativeLayout>
            <EditText
                android:id="@+id/edit_text_audit_club"
                android:layout_width="match_parent"
                android:layout_height="372px"
                android:paddingTop="15px"
                android:paddingLeft="45px"
                android:background="@color/white"
                android:hint="请输入您的整改意见，及驳回的原因"
                android:gravity="top|left"
                android:textSize="16sp"
                android:maxLines="5"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="60dp">
                <Button
                    android:id="@+id/button_return_audit_club"
                    android:layout_width="462px"
                    android:layout_height="wrap_content"
                    android:text="驳回"
                    android:layout_marginLeft="40px"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/white"
                    android:background="@drawable/button_shape4"
                    android:textSize="48px"
                    android:layout_marginBottom="0px"/>
                <Button
                    android:id="@+id/button_pass_audit_club"
                    android:layout_width="462px"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40px"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:background="@drawable/button_shape2"
                    android:textSize="48px"
                    android:text="审核通过" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>