<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gcs="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">

    <RelativeLayout
        android:id="@+id/my_head"
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:background="#FFC609">


        <ImageButton
            android:id="@+id/register"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/add_account_black" />

        <ImageButton
            android:id="@+id/setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@mipmap/set" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <clubmanage.ui.CircleImageView
                android:id="@+id/my_head_img1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:src="@drawable/avator_1"
                gcs:border_color="#ff9800"
                gcs:border_width="4dp" />

            <TextView
                android:id="@+id/my_head_btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_head_img1"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:text="#冰雪灬蓝凌"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="7dp"/>

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_neck"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#4c4c4c">
        <RelativeLayout
            android:id="@+id/club_num"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/activity_num">
            <TextView
                android:id="@+id/my_neck_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_marginTop="-3dp"
                android:id="@+id/my_neck_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="社团"
                android:textColor="#FFFFFF"
                android:layout_below="@id/my_neck_text1" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/activity_num"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/my_neck_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
            <TextView
                android:layout_marginTop="-3dp"
                android:id="@+id/my_neck_text6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/my_neck_text5"
                android:layout_centerHorizontal="true"
                android:text="活动数"
                android:textColor="#FFFFFF" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:id="@+id/focus_num"
            android:layout_toRightOf="@id/activity_num">
            <TextView
                android:id="@+id/my_neck_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="20sp"/>
            <TextView
                android:layout_marginTop="-3dp"
                android:id="@+id/my_neck_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textColor="#FFFFFF"
                android:layout_below="@id/my_neck_text3"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"    >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="#ffffff"
                android:layout_marginBottom="3dp"
                android:id="@+id/my_club">
                <ImageView
                    android:id="@+id/my_club_img1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/add_friends"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="3.6dp"/>
                <TextView
                    android:id="@+id/my_club_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/my_club_img1"
                    android:textColor="#101010"
                    android:text="我的社团"
                    android:textSize="16sp"/>
                <ImageView
                    android:id="@+id/my_club_img2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="3.6dp"
                    android:src="@drawable/arrow_right_grey"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="#ffffff"
                android:layout_marginBottom="3dp"
                android:layout_below="@id/my_club"
                android:id="@+id/my_activity">
                <ImageView
                    android:id="@+id/my_activity_img1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/add_friends"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="3.6dp"/>
                <TextView
                    android:id="@+id/my_activity_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/my_activity_img1"
                    android:textColor="#101010"
                    android:text="我参与的活动"
                    android:textSize="16sp"/>
                <ImageView
                    android:id="@+id/my_activity_img2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="3.6dp"
                    android:src="@drawable/arrow_right_grey"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="#ffffff"
                android:layout_marginBottom="3dp"
                android:layout_below="@id/my_activity"
                android:id="@+id/my_focus">
                <ImageView
                    android:id="@+id/my_focus_img1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/add_friends"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="3.6dp"/>
                <TextView
                    android:id="@+id/my_focus_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/my_focus_img1"
                    android:textColor="#101010"
                    android:text="我的关注"
                    android:textSize="16sp"/>
                <ImageView
                    android:id="@+id/my_focus_img2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="3.6dp"
                    android:src="@drawable/arrow_right_grey"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="#ffffff"
                android:layout_marginBottom="3dp"
                android:layout_below="@id/my_focus"
                android:id="@+id/personal_center">
                <ImageView
                    android:id="@+id/personal_center_img1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/add_friends"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="3.6dp"/>
                <TextView
                    android:id="@+id/personal_center_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/personal_center_img1"
                    android:textColor="#101010"
                    android:text="个人中心"
                    android:textSize="16sp"/>
                <ImageView
                    android:id="@+id/personal_center_img2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="3.6dp"
                    android:src="@drawable/arrow_right_grey"/>
            </RelativeLayout>
            <Button
                android:id="@+id/my_btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/personal_center"
                android:background="#ffffff"
                android:text="切换账号"
                android:stateListAnimator="@null"
                android:textSize="20sp" />
            <Button

                android:id="@+id/my_btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:textColor="#ff0000"
                android:layout_below="@id/my_btn1"
                android:text="退出"
                android:textSize="20sp"
                android:stateListAnimator="@null"
                android:layout_marginTop="3dp"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>