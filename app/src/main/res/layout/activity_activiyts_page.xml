<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".activity.ActiviytsPage"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/activity_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/activity_title_img1"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/logo2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动"
            android:textSize="30sp"
            android:textColor="#666666"
            android:layout_centerInParent="true"/>
        <ImageButton
            android:id="@+id/activity_title_btn1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/search"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <com.youth.banner.Banner
        android:id="@+id/activity_img_show"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/activity_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"></com.youth.banner.Banner>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/activity_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@color/white"
        app:tabTextColor="#4D4C4C"
        app:tabSelectedTextColor="#FF7100"
        app:tabIndicatorColor="#FF9800"
        app:tabIndicator="@drawable/indicator2"
        app:tabTextAppearance="@style/TabLayoutTextStyle2"
        ></com.google.android.material.tabs.TabLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f99200">
    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/activity_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    </androidx.viewpager.widget.ViewPager>
</LinearLayout>