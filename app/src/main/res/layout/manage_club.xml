<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EEEEEE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/change_club_toolbar"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="@color/titlecolorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="管理社团"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:id="@+id/club_logo"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:background="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="社团logo"
                android:textColor="#000000"
                android:textSize="19sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="19dp"></TextView>
            <clubmanage.ui.CircleImageView
                android:id="@+id/c_club_logo"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/enrollment"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="54dp"
                ></clubmanage.ui.CircleImageView>
            <ImageView
                android:id="@+id/array_right_logo2"
                android:src="@drawable/arrow_right_grey"
                android:layout_width="43dp"
                android:textColor="#999999"
                android:layout_height="43dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"></ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/club_poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="社团海报"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"></TextView>
            <TextView
                android:id="@+id/t_club_poster"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#999999"
                android:layout_toLeftOf="@+id/array_right_poster2"
                android:textSize="15sp"
                android:gravity="right"
                android:maxLines="5"
                android:layout_marginRight="7dp"></TextView>
            <ImageView
                android:id="@+id/array_right_poster2"
                android:src="@drawable/arrow_right_grey"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"></ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/club_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="社团名"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:layout_marginLeft="18dp"></TextView>
            <TextView
                android:id="@+id/t_club_name"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#999999"
                android:layout_toLeftOf="@+id/club_img1"
                android:textSize="18sp"
                android:gravity="right"
                android:maxLines="5"
                android:layout_marginRight="7dp"></TextView>
            <ImageView
                android:id="@+id/club_img1"
                android:layout_width="20dp"
                android:layout_height="43dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                ></ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/club_cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="社团分类"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:layout_marginLeft="18dp"></TextView>
            <TextView
                android:id="@+id/t_club_cat"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#999999"
                android:layout_toLeftOf="@+id/club_img2"
                android:textSize="18sp"
                android:gravity="right"
                android:maxLines="5"
                android:layout_marginRight="7dp"></TextView>
            <ImageView
                android:id="@+id/club_img2"
                android:layout_width="20dp"
                android:layout_height="43dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                ></ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/club_slogan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="宣传语"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:layout_marginLeft="18dp"></TextView>
            <TextView
                android:id="@+id/t_club_slogan"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#999999"
                android:layout_toLeftOf="@+id/club_img3"
                android:textSize="18sp"
                android:gravity="right"
                android:maxLines="5"
                android:layout_marginRight="7dp"></TextView>
            <ImageView
                android:id="@+id/club_img3"
                android:layout_width="20dp"
                android:layout_height="43dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                ></ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/club_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="社团简介"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:layout_marginLeft="18dp"></TextView>
            <TextView
                android:id="@+id/t_club_introduce"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#999999"
                android:layout_toLeftOf="@+id/club_img4"
                android:textSize="18sp"
                android:gravity="right"
                android:maxLines="5"
                android:layout_marginRight="7dp"></TextView>
            <ImageView
                android:id="@+id/club_img4"
                android:layout_width="20dp"
                android:layout_height="43dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                ></ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/club_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="发布公告"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:layout_marginLeft="18dp"></TextView>
            <TextView
                android:id="@+id/t_club_notice"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#999999"
                android:layout_toLeftOf="@+id/club_img5"
                android:textSize="18sp"
                android:gravity="right"
                android:maxLines="7"
                android:layout_marginRight="7dp"></TextView>
            <ImageView
                android:id="@+id/club_img5"
                android:layout_width="20dp"
                android:layout_height="43dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                ></ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/club_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="社团场地"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:layout_marginLeft="18dp"></TextView>
            <TextView
                android:id="@+id/t_club_place"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#999999"
                android:layout_toLeftOf="@+id/club_img6"
                android:textSize="18sp"
                android:gravity="right"
                android:maxLines="5"
                android:layout_marginRight="7dp"></TextView>
            <ImageView
                android:id="@+id/club_img6"
                android:layout_width="20dp"
                android:layout_height="43dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                ></ImageView>
        </RelativeLayout>

