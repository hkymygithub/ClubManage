<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalCenterActivity"
    android:orientation="vertical"
    android:background="#EEEEEE">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/person_toolbar"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:background="@color/titlecolorPrimary">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="个人中心"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="94.5dp"
        android:background="#FFFFFF"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"></TextView>
            <clubmanage.ui.CircleImageView
                android:id="@+id/per_cen_head"
                android:layout_width="65.5dp"
                android:layout_height="65.5dp"
                android:src="@mipmap/ic_launcher"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="54.5dp"
                ></clubmanage.ui.CircleImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/person_uid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:text="学号"
            android:textColor="#000000"
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/t_person_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="7.2dp"
            android:layout_toLeftOf="@+id/person_img1"
            android:textColor="#999999"
            android:textSize="16sp"></TextView>

        <ImageView
            android:id="@+id/person_img1"
            android:layout_width="43.6dp"
            android:layout_height="43.6dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"></ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/person_name"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginBottom="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_marginLeft="18dp"
            android:text="姓名"></TextView>
        <TextView
            android:id="@+id/t_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#999999"
            android:layout_toLeftOf="@+id/person_img2"
            android:textSize="16sp"
            android:layout_marginRight="7.2dp"></TextView>
        <ImageView
            android:id="@+id/person_img2"
            android:layout_width="43.6dp"
            android:layout_height="43.6dp"
            android:src="@drawable/arrow_right_grey"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"></ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/person_gender"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginBottom="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_marginLeft="18dp"
            android:text="性别"></TextView>
        <TextView
            android:id="@+id/t_person_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#999999"
            android:layout_toLeftOf="@+id/person_img3"
            android:textSize="16sp"
            android:layout_marginRight="7.2dp"></TextView>

        <ImageView
            android:id="@+id/person_img3"
            android:layout_width="43.6dp"
            android:layout_height="43.6dp"
            android:src="@drawable/arrow_right_grey"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"></ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/person_phone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginBottom="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_marginLeft="18dp"
            android:text="手机"></TextView>
        <TextView
            android:id="@+id/t_person_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#999999"
            android:layout_toLeftOf="@+id/person_img4"
            android:textSize="16sp"
            android:layout_marginRight="7.2dp"></TextView>

        <ImageView
            android:id="@+id/person_img4"
            android:layout_width="43.6dp"
            android:layout_height="43.6dp"
            android:src="@drawable/arrow_right_grey"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"></ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/person_mail"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginBottom="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_marginLeft="18dp"
            android:text="邮箱"></TextView>
        <TextView
            android:id="@+id/t_person_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#999999"
            android:layout_toLeftOf="@+id/person_img5"
            android:textSize="16sp"
            android:layout_marginRight="7.2dp"></TextView>

        <ImageView
            android:id="@+id/person_img5"
            android:layout_width="43.6dp"
            android:layout_height="43.6dp"
            android:src="@drawable/arrow_right_grey"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"></ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/person_major"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginBottom="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_marginLeft="18dp"
            android:text="性别"></TextView>
        <TextView
            android:id="@+id/t_person_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#999999"
            android:layout_toLeftOf="@+id/person_img6"
            android:textSize="16sp"
            android:layout_marginRight="7.2dp"></TextView>

        <ImageView
            android:id="@+id/person_img6"
            android:layout_width="43.6dp"
            android:layout_height="43.6dp"
            android:src="@drawable/arrow_right_grey"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"></ImageView>
    </RelativeLayout>

</LinearLayout>